<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.rajesh.gobus.BusDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:src="@drawable/ic_action_bus" />
        <TextView
            android:id="@+id/id_bus_route_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text="45c"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/id_bus_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text="Government-Normal"
            android:typeface="monospace"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:src="@drawable/ic_action_alarm" />

        <TextView
            android:id="@+id/id_total_travel_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text="1 hr 30 mins"
            android:typeface="monospace"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:text="@string/rupees"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/id_bus_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text="20"
            android:typeface="monospace"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_bus_starting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text=" 02:50:00 "
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/id_bus_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text="palacode"
            android:typeface="monospace"/>
    </LinearLayout>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/route_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_bus_reaching_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text=" 02:50:00 "
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/id_bus_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text="Gandhipuram"
            android:typeface="monospace"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:padding="1dp"
            android:src="@drawable/ic_action_navigate"
            android:layout_weight="0.10" />

        <TextView
            android:id="@+id/id_bus_route_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:text="GoBUS Dharmapuri"
            android:typeface="monospace"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="41dp"
            android:layout_marginLeft="90dp"
            android:onClick="buttonClick"
            android:elevation="10dp"
            android:tint="@color/colorAccent"
            android:id="@+id/image1"
            android:layout_gravity="center"
            android:layout_below="@id/id_bus_destination"
            android:src="@drawable/ic_place_black_24dp" />




    </LinearLayout>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="2dp"
        android:text="Track"
        android:layout_marginLeft="110dp"
        android:typeface="monospace"
        android:layout_below="@id/image1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="@color/colorPrimary" />


</LinearLayout>
